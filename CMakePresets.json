{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-base",
            "description": "Target Windows with the Visual Studio development environment.",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "QT_DIR": "d:/Qt/5.15.2/msvc2019_64/lib/cmake/Qt5",
                "Qt5_DIR": "d:/Qt/5.15.2/msvc2019_64/lib/cmake/Qt5",
                "OpenCV_DIR": "d:/build/opencv/vs2019_x64/x64/vc16/lib",
                "glog_DIR": "D:/build/glog/vs2019_x64/lib/cmake/glog",
                "gflags_DIR": "D:/build/gflags/vs2019_x64/lib/cmake/gflags",
                "LZ4_DIR": "D:/build/LZ4/vs2019_x64/lib/cmake/lz4",
                "Eigen3_DIR": "D:/dev/eigen/build",
                "flann_DIR": "D:/build/flann/vs2019_x64/lib/cmake/flann",
                "LRWIDGETS_BUILD_EXAMPLES": "FALSE",
                "BUILD_EXAMPLES": "OFF",
                "BUILD_STATIC": "TRUE"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (Debug)",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "/DWIN32 /D_WINDOWS /W3 /GR /EHsc /bigobj"
            }
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "description": "Target Windows (64-bit) with the Visual Studio development environment. (RelWithDebInfo)",
            "inherits": "x64-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "/DWIN32 /D_WINDOWS /W3 /GR /EHsc /bigobj"
            }
        },
        {
            "name": "x86-debug",
            "displayName": "x86 Debug",
            "description": "Target Windows (32-bit) with the Visual Studio development environment. (Debug)",
            "inherits": "windows-base",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
        },
        {
            "name": "x86-release",
            "displayName": "x86 Release",
            "description": "Target Windows (32-bit) with the Visual Studio development environment. (RelWithDebInfo)",
            "inherits": "x86-debug",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
        }
    ]
}